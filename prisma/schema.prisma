generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model user {
  id       Int     @id @default(autoincrement())
  name     String
  email    String  @unique
  password String
  role     String
  orders   orders[]

  @@map("user")
}

model products {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  price       Int
  image       String?
  orderItems  order_product[]
  category  product_category[]

  @@map("products")
}

model category {
  id         Int      @id @default(autoincrement())
  name       String   @unique
  products   product_category[]

  @@map("category")
}

model product_category {
  product_id   Int
  category_id  Int
  products     products   @relation(fields: [product_id], references: [id])
  categories   category @relation(fields: [category_id], references: [id])

  @@id([product_id, category_id])
  @@map("product_category")
}

model orders {
  id        Int     @id @default(autoincrement())
  user_id   Int
  date      String
  status    String
  user      user    @relation(fields: [user_id], references: [id])
  items     order_product[]
  payments  payments[]

  @@map("orders")
}

model order_product {
  order_id   Int
  product_id Int
  quantity   Int
  orders     orders   @relation(fields: [order_id], references: [id])
  products   products @relation(fields: [product_id], references: [id])

  @@id([order_id, product_id])
  @@map("order_product")
}

model payments {
  id        Int     @id @default(autoincrement())
  order_id  Int
  amount    Int
  method    String
  status    String
  date      String
  orders    orders  @relation(fields: [order_id], references: [id])

  @@map("payments")
}
