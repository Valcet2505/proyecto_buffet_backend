generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model user {
  id       Int     @id @default(autoincrement())
  name     String
  email    String  @unique
  password String
  role     String

  orders   orders[]
}

model products {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  price       Int
  image       String?
  orderItems  order_product[]
  categories  product_category[]
}

model categories {
  id         Int      @id @default(autoincrement())
  name       String   @unique
  products   product_category[]
}

model product_category {
  product_id   Int
  category_id  Int

  products   products   @relation(fields: [product_id], references: [id])
  categories categories @relation(fields: [category_id], references: [id])

  @@id([product_id, category_id])
}

model orders {
  id        Int     @id @default(autoincrement())
  user_id   Int
  date      String
  status    String

  user      user    @relation(fields: [user_id], references: [id])
  items     order_product[]
  payments  payments[]
}

model order_product {
  order_id   Int
  product_id Int
  quantity   Int

  orders     orders   @relation(fields: [order_id], references: [id])
  products   products @relation(fields: [product_id], references: [id])

  @@id([order_id, product_id])
}

model payments {
  id        Int     @id @default(autoincrement())
  order_id  Int
  amount    Int
  method    String
  status    String
  date      String

  orders    orders  @relation(fields: [order_id], references: [id])
}